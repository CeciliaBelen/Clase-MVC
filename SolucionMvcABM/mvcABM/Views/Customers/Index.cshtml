@model IEnumerable<mvcABM.Models.Customer>

@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model);
}
<link href="~/Content/estilosgrid.css" rel="stylesheet" />

<h2>Our customers:</h2>
@grid.GetHtml(
    fillEmptyRows: true,
    tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "webgrid-footer",
    alternatingRowStyle: "webgrid-alternating-row",
    rowStyle: "webgrid-row-style",
    mode: WebGridPagerModes.All,
columns: new[]
{
grid.Column("CustomerID",header:"Código"),
grid.Column("CompanyName",header:"Compañía"),
grid.Column("ContactName",header:"Nombre Contacto"),
grid.Column("Phone",header:"Telefono"),
grid.Column("City",header:"Ciudad"),
grid.Column("Country",header:"País"),
grid.Column("",
header: "Acciones",
format:
@<text>
    @Html.ActionLink("Ver Pedidos",   "VerPedidos",   new { id=item.CustomerID} )
</text>
    )

                })