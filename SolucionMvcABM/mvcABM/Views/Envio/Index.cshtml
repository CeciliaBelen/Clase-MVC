@model IEnumerable<mvcABM.Models.Shipper>

@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model);
}
<link href="~/Content/estilosgrid.css" rel="stylesheet" />

<h2>Ship with us!</h2>

<h2>Our customers:</h2>
@grid.GetHtml(
    fillEmptyRows: true,
    tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "webgrid-footer",
    alternatingRowStyle: "webgrid-alternating-row",
    rowStyle: "webgrid-row-style",
    mode: WebGridPagerModes.All,
columns: new[]
{
grid.Column("ShipperID",header:"Código"),
grid.Column("CompanyName",header:"Compañia"),
grid.Column("Phone",header:"Telefono"),
header: "Acciones",
format:
@<text>
    @Html.ActionLink("Ver Pedidos",   "VerPedidos",   new { id=item.CustomerID} )
</text>
    )

                            })