
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
    <script>
        function fnClick1()
        {
            $.ajax(
                {
                    type: 'POST',
                    data: "", //datos o parametros enviados al servidor
                    dataType: 'html', //el tipo de dato que nos regresara el servidor en este caso regresa html
                    url: '@Url.Action("Vista1", "Jquery")',
                    //URL del action result que cargara la vista parcial
                    success: function (result)
                    {
                    //si todo OK agregara al div vista1 el contenido
                        //que recibio del servidor
                        $("#vista1").html(result);
                    },
                    error: function (error)
                    {
                    // si hay un error lanzara el mensaje de error
                    alert('Fallo la vista parcial 1');
                    }
                });
        }
        function fnClick2()
        {
            $.ajax(
                 {
                     type: 'POST',
                     data: "", //datos o parametros enviados al servidor
                     dataType: 'html', //el tipo de dato que nos regresara el servidor en este caso regresa html
                     url: '@Url.Action("Vista2", "Jquery")',
                     //URL del action result que cargara la vista parcial
                     success: function (result) {
                         //cuando se ejecuta bien la funcion agregara al div vista2 el contenido
                         //que recibio del servidor
                         $("#vista2").html(result);
                     },
                     error: function (error) {
                         // si hay un error lanzara el mensaje de error
                         alert('Fallo la vista parcial 2');
                     }
                 });
        }
    </script>
</head>
<body>
    <br />
    <br />
    <br />
    <br />
    <h1>VISTA PRINCIPAL @ViewBag.Hora</h1>
    <br />
    <br />
    <div>
        <input type="button" id="bnt1" value="Vista Parcial 1"
               onclick="fnClick1()" />
        <br />
        <br />
        <input type="button" id="btn2" value="Vista Parcial 2"
               onclick="fnClick2()" />
    </div>
    <div id="vista1"
         style="border-color:red;
            border-style:solid;
            border-width:thin">
    </div>
    <div id="vista2"
         style="border-color:blueviolet;
            border-style:solid;
            border-width:thin">
    </div>

</body>
</html>



